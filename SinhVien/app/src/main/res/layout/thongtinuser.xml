<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bn"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageview"
            android:scrollX="20dp"
            android:src="@drawable/ic_person"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </ImageView>
        <TextView
            android:id="@+id/textName"
            android:layout_marginLeft="10dp"
            android:text="Thanh Nga"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#E31717"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textColor="#F44336"
            android:text="Nga@gmail.com"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:id="@+id/textgmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:text="Trạng thái :Online"
            android:textColor="#816D2F"
            android:textStyle="bold"
            android:id="@+id/textTrangthai"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

</LinearLayout>